/* profile.wxss */

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #4CAF50;
  color: #fff;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
}

.user-details {
  flex: 1;
}

.user-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.username {
  font-size: 36rpx;
  font-weight: 500;
}

.login-btn {
  margin: 0;
  padding: 0 20rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
  border: none;
  border-radius: 28rpx;
  min-width: 140rpx;
}

.login-btn::after {
  border: none;
}

.login-btn::after {
  border: none;
}

/* 功能菜单 */
.menu-list {
  margin-top: 30rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 12rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.menu-icon .iconfont {
  font-size: 36rpx;
  color: #4CAF50;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
}

.menu-arrow .iconfont {
  font-size: 28rpx;
}

/* 版本信息 */
.app-info {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}