/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: #333;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

/* 主题颜色 */
.primary-color {
  color: #4CAF50;
}

.primary-bg {
  background-color: #4CAF50;
}

.secondary-color {
  color: #8BC34A;
}

.secondary-bg {
  background-color: #8BC34A;
}

/* 通用容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 0 0 20rpx 0;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  margin: 20rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 16px;
  font-weight: 500;
}

.card-body {
  padding: 20rpx;
}

.card-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 14px;
  text-align: center;
  transition: all 0.3s;
}

.btn-primary {
  background-color: #4CAF50;
  color: #fff;
}

.btn-primary:active {
  background-color: #3e8e41;
}

.btn-secondary {
  background-color: #8BC34A;
  color: #fff;
}

.btn-secondary:active {
  background-color: #7cb342;
}

.btn-outline {
  border: 1rpx solid #4CAF50;
  color: #4CAF50;
  background-color: transparent;
}

.btn-outline:active {
  background-color: rgba(76, 175, 80, 0.1);
}

.btn-large {
  width: 100%;
  padding: 24rpx 30rpx;
  font-size: 16px;
}

/* 表单元素 */
.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 14px;
  color: #666;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 14px;
}

.form-input:focus {
  border-color: #4CAF50;
}

/* 列表样式 */
.list {
  background-color: #fff;
}

.list-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  align-items: center;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 6rpx;
}

.list-item-desc {
  font-size: 14px;
  color: #999;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 12px;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-primary {
  background-color: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.tag-warning {
  background-color: rgba(255, 152, 0, 0.1);
  color: #FF9800;
}

.tag-danger {
  background-color: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(76, 175, 80, 0.2);
  border-top-color: #4CAF50;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-state-icon {
  font-size: 80rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}

.empty-state-text {
  color: #999;
  font-size: 14px;
}

/* 工具类 */
.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-bold {
  font-weight: bold;
}

.text-small {
  font-size: 12px;
}

.text-gray {
  color: #999;
}

.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 滑动区域 */
.scroll-view-x {
  white-space: nowrap;
}

.scroll-view-item {
  display: inline-block;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}